{
  "name": "snippet-vault",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./src/index.ts",
  "scripts": {
    "prestart": "yarn typeorm:sync && yarn typeorm:migration:run",
    "start": "npm-run-all clean-dist set:environment:dev --parallel watch:css dev",
    "build": "npm-run-all set:environment:prod typeorm:sync typeorm:migration:run clean-dist typescript build:css copy-files",
    "set:environment:dev": "cross-env NODE_ENV=development",
    "set:environment:prod": "cross-env NODE_ENV=production",
    "dev": "nodemon",
    "typescript": "tsc",
    "clean-dist": "rm -rf dist && mkdir dist",
    "copy-files": "cp ormconfig.json dist && cp -r src/app/views dist/app",
    "typeorm:migration:run": "yarn typeorm migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "typeorm:sync": "yarn typeorm schema:sync",
    "typeorm:drop": "yarn typeorm schema:drop",
    "typeorm:reset": "yarn typeorm:drop && yarn typeorm:sync",
    "watch:css": "node-sass --watch src/app/public/assets/styles -o src/app/public/assets/styles",
    "build:css": "node-sass src/app/public/assets/styles -o dist/app/public/assets/styles --output-style compressed && npm run prefix:css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" dist/app/public/assets/styles --replace"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/node": "^10.12.9",
    "@types/nunjucks": "^3.1.0",
    "autoprefixer": "^9.3.1",
    "cross-env": "^5.2.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.6",
    "postcss-cli": "^6.0.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mysql2": "^1.6.4",
    "nunjucks": "^3.1.4",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.9"
  }
}
