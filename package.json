{
  "name": "snippet-vault",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./src/index.ts",
  "scripts": {
    "prestart": "yarn typeorm:sync",
    "start": "cross-env NODE_ENV=development nodemon",
    "build": "cross-env NODE_ENV=production && npm-run-all typeorm:sync typeorm:migration:run clean-dist typescript copy-files",
    "typescript": "tsc",
    "clean-dist": "rm -rf dist && mkdir dist",
    "copy-files": "cp ormconfig.json dist && cp -r src/app/views dist/app",
    "typeorm:migration:run": "yarn typeorm migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "typeorm:sync": "yarn typeorm schema:sync",
    "typeorm:drop": "yarn typeorm schema:drop",
    "typeorm:reset": "yarn typeorm:drop && yarn typeorm:sync"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.9",
    "@types/nunjucks": "^3.1.0",
    "cross-env": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mysql2": "^1.6.4",
    "nunjucks": "^3.1.4",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.9"
  }
}
